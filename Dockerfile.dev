FROM rust:latest

# SQLx Tools
RUN apt-get update \
 && apt-get install -y --no-install-recommends pkg-config libssl-dev ca-certificates libsqlite3-dev \
 && rm -rf /var/lib/apt/lists/*

# Hot reload
RUN cargo install cargo-watch

# SQLx CLI (avec SQLite)
RUN cargo install sqlx-cli --no-default-features --features sqlite,rustls

WORKDIR /app

# Entrypoint qui applique les migrations puis lance la commande (cargo watch)
COPY docker-entrypoint.sh /usr/local/bin/docker-entrypoint.sh
RUN sed -i 's/\r$//' /usr/local/bin/docker-entrypoint.sh \
 && sed -i '1s/^\xEF\xBB\xBF//' /usr/local/bin/docker-entrypoint.sh \
 && chmod 755 /usr/local/bin/docker-entrypoint.sh

ENTRYPOINT ["/bin/sh", "/usr/local/bin/docker-entrypoint.sh"]
